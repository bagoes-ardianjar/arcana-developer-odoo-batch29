<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- odooacademy.session tree view -->
    <record id="rifkiacademy.session_view_tree" model="ir.ui.view">
        <field name="name">rifkiacademy.session.view.tree</field>
        <field name="model">rifkiacademy.session</field>
        <field name="arch" type="xml">
            <tree decoration-info="duration &lt; 5" decoration-danger="duration &gt; 15">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="course_id"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="number_of_seats"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- odooacademy.session form view -->
    <record id="rifkiacademy.session_view_form" model="ir.ui.view">
        <field name="name">rifkiacademy.session.view.form</field>
        <field name="model">rifkiacademy.session</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="number_of_seats"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="taken_seats" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Attendees" name="partner_ids">
                            <field name="partner_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- rifkiacademy.session calendar view -->
    <record id="rifkiacademy.session_view_calendar" model="ir.ui.view">
        <field name="name">rifkiacademy.session.view.calendar</field>
        <field name="model">rifkiacademy.session</field>
        <field name="arch" type="xml">
            <calendar string="Calendar Description" date_start="start_date" color="course_id">
                <!-- Add your fields here -->
                <field name="name"/>
            </calendar>
        </field>
    </record>

    <!-- odooacademy.session action window -->
    <record id="rifkiacademy_session_action" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">rifkiacademy.session</field>
        <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="session_menu_act" name="Session" parent="rifkiacademy_menu_root" action="rifkiacademy_session_action" sequence="20"/>

</odoo>
