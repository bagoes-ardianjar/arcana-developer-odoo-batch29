<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- odooacademy.session tree view -->
    <record id="odooacademy.session_view_tree" model="ir.ui.view">
        <field name="name">odooacademy.session.view.tree</field>
        <field name="model">odooacademy.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="course_id"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="number_of_seats"/>
            </tree>
        </field>
    </record>

    <!-- odooacademy.session form view -->
    <record id="odooacademy.session_view_form" model="ir.ui.view">
        <field name="name">odooacademy.session.view.form</field>
        <field name="model">odooacademy.session</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="number_of_seats"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- odooacademy.session action window -->
    <record id="odooacademy_session_action" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">odooacademy.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="session_menu_act" name="Session" parent="odooacademy_menu_root" action="odooacademy_session_action" sequence="20"/>

</odoo>
