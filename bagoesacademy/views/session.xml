<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- bagoesacademy.session tree view -->
    <record id="bagoesacademy.session_view_tree" model="ir.ui.view">
        <field name="name">bagoesacademy.session.view.tree</field>
        <field name="model">bagoesacademy.session</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="course_id"/>
                <field name="start_date"/>
                <field name="duration"/>
                <field name="number_of_seats"/>
                <field name="taken_seats" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- bagoesacademy.session form view -->
    <record id="bagoesacademy.session_view_form" model="ir.ui.view">
        <field name="name">bagoesacademy.session.view.form</field>
        <field name="model">bagoesacademy.session</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="number_of_seats"/>
                            <field name="start_date"/>
                            <field name="duration"/>
                            <field name="taken_seats" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description"/>
                        </page>
                        <page string="Attendees" name="partner_ids">
                            <field name="partner_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- bagoesacademy.session action window -->
    <record id="bagoesacademy_session_action" model="ir.actions.act_window">
        <field name="name">Session</field>
        <field name="res_model">bagoesacademy.session</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="session_menu_act" name="Session" parent="bagoesacademy_menu_root" action="bagoesacademy_session_action" sequence="20"/>

</odoo>
